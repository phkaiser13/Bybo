<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" styleClass="root" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.phkaiser.bybo.app.ui.controllers.MainViewController">
    <children>
        <VBox layoutX="50.0" layoutY="50.0" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label text="ByBo - Sistema de Biblioteca">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <TableView fx:id="livrosTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colunaTitulo" prefWidth="250.0" text="Título" />
                        <TableColumn fx:id="colunaAutor" prefWidth="200.0" text="Autor" />
                        <TableColumn fx:id="colunaIsbn" prefWidth="150.0" text="ISBN" />
                        <TableColumn fx:id="colunaAno" prefWidth="100.0" text="Ano" />
                        <TableColumn fx:id="colunaStatus" prefWidth="120.0" text="Status" />
                    </columns>
                </TableView>

                <HBox alignment="BOTTOM_LEFT" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Título" />
                                <TextField fx:id="tituloField" promptText="Título do Livro" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Autor" />
                                <TextField fx:id="autorField" promptText="Autor do Livro" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="ISBN" />
                                <TextField fx:id="isbnField" promptText="ISBN" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Ano" />
                                <TextField fx:id="anoField" prefWidth="80.0" promptText="Ano" />
                            </children>
                        </VBox>
                        <Button mnemonicParsing="false" onAction="#handleAdicionarLivro" text="Adicionar Livro" />
                    </children>
                </HBox>

                <HBox spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleEmprestarLivro" text="Emprestar Selecionado" />
                        <Button mnemonicParsing="false" onAction="#handleDevolverLivro" text="Devolver Selecionado" />
                        <Button fx:id="delete-button" mnemonicParsing="false" onAction="#handleExcluirLivro" text="Excluir Selecionado" />
                    </children>
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>