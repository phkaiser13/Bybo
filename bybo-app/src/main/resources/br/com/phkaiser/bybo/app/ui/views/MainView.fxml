<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.phkaiser.bybo.app.ui.controllers.MainViewController">

    <left>
        <!-- Adicionado fx:id="navigationVBox" para que o controller possa adicionar botões aqui -->
        <VBox fx:id="navigationVBox" styleClass="nav-pane" alignment="TOP_CENTER" spacing="10.0" prefWidth="220.0" BorderPane.alignment="CENTER">
            <padding><Insets top="20.0" /></padding>
            <children>
                <!-- O botão de Livros foi removido. Os botões de tabela serão adicionados aqui dinamicamente. -->
                
                <!-- Novo botão para gerenciar as tabelas -->
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleNavegarSchemaEditor" styleClass="nav-button" text="Gerenciar Tabelas">
                    <graphic>
                        <FontIcon iconLiteral="fas-cog" />
                    </graphic>
                </Button>

                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleNavegarDashboard" styleClass="nav-button" text="Dashboard">
                    <graphic>
                        <FontIcon iconLiteral="fas-chart-pie" />
                    </graphic>
                </Button>

                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSair" styleClass="nav-button" text="Sair">
                    <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" />
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <AnchorPane fx:id="contentPane" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>